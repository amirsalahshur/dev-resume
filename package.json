{
  "name": "amir-salahshur-portfolio",
  "version": "2.0.0",
  "description": "Modern portfolio website for Amir Salahshur - Full Stack Developer & DevOps Engineer",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode production",
    "build:staging": "vite build --mode staging",
    "preview": "vite preview",
    "serve": "vite preview --port 3000 --host",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .js,.ts --fix",
    "format": "prettier --write \"src/**/*.{js,ts,css,html}\"",
    "check": "npm run lint && npm run build",
    "test": "echo \"No tests specified yet\" && exit 0",
    "security-audit": "npm audit --audit-level=moderate",
    "deploy": "npm run build && gh-pages -d dist",
    "start": "npm run serve",
    "start:pm2": "pm2 start ecosystem.config.js --env production",
    "stop:pm2": "pm2 stop ecosystem.config.js",
    "restart:pm2": "pm2 restart ecosystem.config.js --env production",
    "reload:pm2": "pm2 reload ecosystem.config.js --env production",
    "delete:pm2": "pm2 delete ecosystem.config.js",
    "logs:pm2": "pm2 logs",
    "status:pm2": "pm2 status",
    "health-check": "node scripts/health-check.js",
    "deploy:production": "bash scripts/deploy.sh",
    "deploy:rollback": "bash scripts/deploy.sh --rollback",
    "setup:service": "sudo bash scripts/setup-service.sh",
    "docker:build": "docker build -t portfolio:latest .",
    "docker:run": "docker run -p 3000:3000 -p 3001:3001 portfolio:latest",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "optimize": "npm run clean && npm run build && npm run security-audit"
  },
  "keywords": [
    "portfolio",
    "devops",
    "fullstack",
    "developer",
    "cloud",
    "kubernetes",
    "docker",
    "aws",
    "azure",
    "react",
    "nodejs",
    "python"
  ],
  "author": {
    "name": "Amir Salahshur",
    "email": "amir@example.com",
    "url": "https://github.com/amirsalahshur"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/amirsalahshur/dev-resume"
  },
  "bugs": {
    "url": "https://github.com/amirsalahshur/dev-resume/issues"
  },
  "homepage": "https://amirsalahshur.github.io/dev-resume",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "eslint": "^9.15.0",
    "gh-pages": "^6.1.1",
    "globals": "^15.12.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "terser": "^5.36.0",
    "vite": "^6.0.1",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "postcss": "^8.4.32"
  },
  "dependencies": {},
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}